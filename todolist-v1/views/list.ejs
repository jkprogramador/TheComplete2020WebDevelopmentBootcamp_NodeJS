<%- include('header'); -%>
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
      <% for (let i = 0, length = myTodos.length; i < length; i++) { %>
      <div class="item">
        <input type="checkbox" />
        <p><%= myTodos[i] %></p>
      </div>
      <% } %>

      <form class="item" action="/" method="post">
        <input type="text" name="todo" placeholder="TODO" autocomplete="off" required />
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
    </div>
<%- include('footer'); -%>