<%- include('partials/header'); -%>

<h1>Home</h1>

<p>
  <%= content %>
</p>

<% myPosts.forEach(function(post) { %>
<h2>
  <%= post.title %>
</h2>
<p>
  <%= post.body.slice(0, 100) + ' ...' %>
  <a href="/posts/<%= post.permalink %>">Read more</a>
</p>
<% }); %>

